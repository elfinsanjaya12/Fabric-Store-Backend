<%- include ../../partials/admin_layout/header.ejs %>
<%- include ../../partials/admin_layout/sidebar.ejs %>
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">

  <!-- Main content -->
  <section class="content">
    <div class="row">

      <div class="col-xs-12">
        <div class="box">
          <!-- /.box-header -->
          <div class="box-header">
            <h3 class="box-title">Data Tahun</h3>
          </div>

          <div class="box-body">
            <div style="margin: 0 20px 20px 20px;">
              <!-- <button class="btn btn-success">Tambah</button> -->
              <button type="button" class="btn btn-success" data-toggle="modal" data-target="#add-modal">
                Tambah
              </button>
            </div>
            <table id="tahun" class="table table-bordered table-striped">
              <thead>
                <tr>
                  <th>No</th>
                  <th>Tahun</th>
                  <th>Kepala Sekolah</th>
                  <th>Tgl Raport</th>
                  <th>Semester</th>
                  <th>Status</th>
                  <th>Aksi</th>
                </tr>
              </thead>
              <tbody>
                <% for (let i = 0; i < tahun.length; i++ ) { %>
                <tr>
                  <td><%= i + 1 %></td>
                  <td><%= tahun[i].tahun %></td>
                  <td>
                    <%= tahun[i].kepala_sekolah %>
                  </td>
                  <td>
                    <%= tahun[i].tgl_raport %>
                  </td>
                  <td>
                    <%= tahun[i].semester %>
                  </td>
                  <td>
                    <span class="pull-right-container">
                      <% if(tahun[i].status === "Active") { %>
                      <small class="label pull-center bg-green"> <%= tahun[i].status %></small>
                      <% } else { %>
                      <small class="label pull-center bg-red"> <%= tahun[i].status %></small>
                      <% }  %>
                    </span>
                  </td>

                  <td>
                    <a href="javascript:void(0);" type="button" class="btn btn-success btn-sm edit"
                      data-nip="<%= tahun[i].nip %>" data-id="<%= tahun[i].id %>"
                      data-kepala="<%= tahun[i].kepala_sekolah %>" data-tgl="<%= tahun[i].tgl_raport %>"
                      data-semester="<%= tahun[i].semester %>" data-tahun="<%= tahun[i].tahun %>">
                      <span class="glyphicon glyphicon-pencil"></span>
                      Edit
                    </a>
                    <button class="btn btn-info btn-sm" onclick="update_status(`<%= tahun[i].id %>`)"
                      data-id="<%= tahun[i].id %>">
                      <span class="glyphicon glyphicon-star"></span>
                      Active
                    </button>
                  </td>
                </tr>
                <% } %>
              </tbody>
            </table>
          </div>
          <!-- /.box-body -->
        </div>
        <!-- /.box -->
      </div>
      <!-- /.col -->
    </div>
    <!-- /.row -->
  </section>
  <!-- /.content -->
</div>

<!-- iclude modal add -->
<%- include add_modal.ejs %>

<!-- iclude modal edit -->
<%- include edit_modal.ejs %>

<%- include ../../partials/admin_layout/footer.ejs %>
<!-- page script -->
<script>
  $(document).ready(function () {
    // datatable
    $('#tahun').DataTable()

    // redirect halaman tahun
    function halamanTahun() {
      window.location.replace(window.location.protocol + "//" + window.location.host + '/admin/tahun')
    }

    // function simpan
    $('#simpan_tahun').on('submit', function (event) {
      event.preventDefault();
      $.ajax({
        url: "/admin/tahun/create",
        method: "POST",
        data: $(this).serialize(),
        success: function () {
          swal({
            title: "Success",
            text: "Success Tambah Data Tahun",
            icon: "success",
            button: "Oke",
          }).then(sukses => {
            halamanTahun();
          });
        },
      })
    })

    //showing data to e edit modal 
    $('#tahun').on('click', '.edit', function () {
      const id = $(this).data('id');
      const nip = $(this).data('nip');
      const kepala_sekolah = $(this).data('kepala');
      const tgl_raport = $(this).data('tgl');
      const tahun = $(this).data('tahun');
      const semester = $(this).data('semester');


      $('#edit-modal').modal('show');
      $('.id').val(id);
      $('.nip').val(nip);
      $('.kepala_sekolah').val(kepala_sekolah);
      $('.tgl_raport').val(tgl_raport);
      $('.tahun').val(tahun);
      $('.semester').val(semester);
    });
  })

  // Change Status 
  function update_status(id) {
    let idTahun = id;
    swal({
      title: "Yakin Ingin Change Status?",
      icon: "warning",
      buttons: true,
      dangerMode: true,
    }).then(willDelete => {
      if (willDelete) {
        swal({
          title: "Success",
          text: "Success Change Status",
          icon: "success",
        }).then(suksesChange => {
          window.location.assign(`/admin/tahun/status/${idTahun}`);
        });
      }
    });
  }

</script>